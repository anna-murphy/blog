---
interface Props {
	title: string;
}

const { title } = Astro.props;

import "../styles/reset.css";
import "../styles/liberation-sans.css";
import "../styles/veranda.css";
import "../styles/global-vars.css";
import "../styles/global.css";
import "../styles/layout.css";

import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="author" content="Anna Murphy">
		<meta name="description" content="Coffee's Portfolio Website">
		<meta name="keywords" content="coffee, ahcoffeebeans, art, rpgs, ttrpgs">
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>ahcoffeebeans --- {title}</title>
	</head>
	<body>
		<div class="page-wrapper">
			<Header />
			<main class="full-bleed-wrapper">
				<slot />
			</main>
			<div class="spacer"></div>
			<Footer />
		</div>
	</body>
</html>

<style scoped>
	.page-wrapper {
		width: 100%;
		min-height: 100vh;
		display: flex;
		flex-direction: column;
		align-items: stretch;
		justify-content: flex-start;
	}

	.spacer {
		flex: 1;
	}

	main {
	}
</style>